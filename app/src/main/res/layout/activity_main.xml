<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onoffview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_off"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/allproviders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/onoffview"
        android:text="Provider"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enableprovider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allproviders"
        android:layout_alignLeft="@+id/onoffview"
        android:layout_marginLeft="70dp"
        android:text="Usable Provider"
        android:textSize="19dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line0"
        android:orientation="horizontal"
        android:layout_below="@+id/enableprovider"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/line0"
            android:layout_weight="1"
            android:layout_marginLeft="17dp"
            android:text="Provider"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/provider"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_below="@+id/line0"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Latitude"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/latitude"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_below="@+id/line1"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Longitude"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/longitude"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line3"
        android:orientation="horizontal"
        android:layout_below="@+id/line2"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accuracy"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/accuracy"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line4"
        android:orientation="horizontal"
        android:layout_below="@+id/line3"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/timestamp"/>

    </LinearLayout>

</RelativeLayout>