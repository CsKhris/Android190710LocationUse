<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fonoffview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_off"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/fallproviders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/fonoffview"
        android:text="Fused API"
        android:textSize="19dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fline1"
        android:orientation="horizontal"
        android:layout_below="@+id/fonoffview"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Latitude"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/flatitude"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fline2"
        android:orientation="horizontal"
        android:layout_below="@+id/fline1"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Longitude"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/flongitude"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fline3"
        android:orientation="horizontal"
        android:layout_below="@+id/fline2"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accuracy"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/faccuracy"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fline4"
        android:orientation="horizontal"
        android:layout_below="@+id/fline3"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:layout_marginLeft="17dp"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="19dp"
            android:textStyle="bold"
            android:id="@+id/ftimestamp"/>

    </LinearLayout>

</RelativeLayout>